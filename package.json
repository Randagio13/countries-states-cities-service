{
  "name": "countries-states-cities-service",
  "author": "Alessandro Casazza",
  "version": "1.3.2",
  "description": "Get the World's countries, states, regions and cities",
  "repository": "https://github.com/Randagio13/countries-states-cities-service.git",
  "license": "MIT",
  "typings": "lib/index.d.ts",
  "module": "lib/index.js",
  "keywords": [
    "world",
    "countries",
    "states",
    "regions",
    "cities"
  ],
  "files": [
    "lib",
    "package.json"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "alias": "npx tsc-alias",
    "start": "tsc --watch",
    "build": "tsc -b tsconfig.json --verbose --force",
    "postbuild": "minimize-js lib",
    "minify-json": "minify-json ./lib/data -w -s",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "coverage": "jest --coverage",
    "prepare": "npm run build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "semantic-release": "semantic-release",
    "publish:beta": ""
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      [
        "@semantic-release/github",
        {
          "addReleases": "top"
        }
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "lib",
      "limit": "5 MB",
      "webpack": false
    }
  ],
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.2",
    "@semantic-release/npm": "^9.0.1",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/jest": "^27.4.1",
    "cross-env": "^7.0.3",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-esm-transformer": "^1.0.0",
    "minify-json": "^1.0.0",
    "minimize-js": "^1.3.0",
    "semantic-release": "^19.0.2",
    "size-limit": "^7.0.8",
    "ts-jest": "^27.1.3",
    "tslib": "^2.3.1",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@ac-dev/cities-service": "^1.1.1",
    "@ac-dev/countries-service": "^1.2.0",
    "@ac-dev/states-service": "^1.1.0"
  }
}
