{
  "name": "countries-states-cities-service",
  "author": "Alessandro Casazza",
  "version": "1.1.0",
  "description": "Get the World's countries, states, regions and cities",
  "repository": "https://github.com/Randagio13/countries-states-cities-service.git",
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "keywords": [
    "world",
    "countries",
    "states",
    "regions",
    "cities"
  ],
  "files": [
    "lib",
    "package.json"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsc --watch",
    "build": "tsc --build --pretty --verbose && npx tsc-alias",
    "test": "jest",
    "prepare": "npm run build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "semantic-release": "semantic-release",
    "publish:beta": ""
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      [
        "@semantic-release/github",
        {
          "addReleases": "top"
        }
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "lib/index.js",
  "size-limit": [
    {
      "path": "lib",
      "limit": "35 MB",
      "webpack": false
    }
  ],
  "devDependencies": {
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-typescript": "^7.15.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/commit-analyzer": "^9.0.1",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^8.0.1",
    "@semantic-release/npm": "^8.0.0",
    "@semantic-release/release-notes-generator": "^10.0.2",
    "@size-limit/preset-small-lib": "^5.0.5",
    "@types/jest": "^27.0.2",
    "husky": "^7.0.2",
    "jest": "^27.2.4",
    "semantic-release": "^18.0.0",
    "size-limit": "^5.0.5",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  }
}
